					<param name="type">MORPH_OPEN</param>
				</Component>
				<Component name="Morphology3_G" type="CvBasic:CvMorphology" priority="10" bump="0">
					<param name="iterations">3</param>
					<param name="type">MORPH_CLOSE</param>
				</Component>
				
				
				
				<Component name="Morphology1_B" type="CvBasic:CvMorphology" priority="11" bump="0">
					<param name="iterations">2</param>
					<param name="type">MORPH_OPEN</param>
				</Component>
				<Component name="Morphology2_B" type="CvBasic:CvMorphology" priority="12" bump="0">
					<param name="iterations">1</param>
					<param name="type">MORPH_CLOSE</param>
				</Component>
				<Component name="Morphology3_B" type="CvBasic:CvMorphology" priority="13" bump="0">
					<param name="iterations">2</param>
					<param name="type">MORPH_OPEN</param>
				</Component>
				
				
				
				
				
				
				<Component name="FindEdges1_R" type="CvBasic:CvCanny" priority="14" bump="0">
				</Component>
				<Component name="FindEdges2_R" type="CvBasic:CvContour" priority="15" bump="0">
				</Component>
				<Component name="FindRectangles_R" type="BrickDetection:Rectangles" priority="16" bump="0">
				</Component>
				
				<Component name="FindEdges1_G" type="CvBasic:CvCanny" priority="17" bump="0">
				</Component>				
				<Component name="FindEdges2_G" type="CvBasic:CvContour" priority="18" bump="0">
				</Component>
				<Component name="FindRectangles_G" type="BrickDetection:Rectangles" priority="19" bump="0">
				</Component>
				
				
				<Component name="FindEdges1_B" type="CvBasic:CvCanny" priority="20" bump="0">
				</Component>				
				<Component name="FindEdges2_B" type="CvBasic:CvContour" priority="21" bump="0">
				</Component>
				<Component name="FindRectangles_B" type="BrickDetection:Rectangles" priority="22" bump="0">
				</Component>
			</Executor>

			<Executor name="Visualization" period="0.01">
