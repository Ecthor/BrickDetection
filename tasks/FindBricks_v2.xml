<Task>
	<Reference>
		<Author>
			<name>Lukasz Korpal</name>
			<link></link>
		</Author>
		
		<Description>
			<brief></brief>
			<full></full>	
		</Description>
	</Reference>
	
	<Subtasks>
		<Subtask name="Main">

            <Executor name="Loader" period="1">
                <Component name="Source" type="CameraPGR:CameraPGR" priority="1" bump="0">
					<param name="camera_serial">13481977</param>
					<param name="width">1296</param>
					<param name="height">1032</param>

				</Component>
				
                <Component name="CameraInfo" type="CvCoreTypes:CameraInfoProvider" priority="2">
					<param name="width">1296</param>
					<param name="height">1032</param>
					<param name="camera_matrix">1052.974150 0.000000 646.343139 ; 0.000000 1048.529819 506.165068 ; 0.000000 0.000000 1.000000</param>
					<param name="dist_coeffs">-0.405033 0.189376 0.000262 0.000465 0.000000</param>
				</Component>

				<Component name="Undistort" type="CvBasic:CvUndistort" priority="3">
				</Component>

            </Executor>
			<Executor name="Converter" period="0.9">
				<Component name="ColorConverter" type="CvBasic:CvColorConv" priority="1" bump="0">
					<param name="type">BGR2HSV</param>
				</Component>

				<Component name="GreyScale" type="CvBasic:CvColorConv" priority="2" bump="0">
					<param name="type">BGR2GRAY</param>
				</Component>

				<Component name="Threshold" type="CvBasic:CvAdaptiveThreshold" priority="3" bump="0">
					<param name="type">BGR2GRAY</param>
					<param name="C">6</param>
				</Component>

				<Component name="HSVClassifier" type="CvBasic:HSVLUT" priority="4" bump="0">
					<param name="hue.threshold.low">10</param>
					<param name="hue.threshold.high">40</param>
				</Component>

				<Component name="Morphology1" type="CvBasic:CvMorphology" priority="5" bump="0">
					<param name="iterations">0</param>
				</Component>

				<Component name="Morphology2" type="CvBasic:CvMorphology" priority="6" bump="0">
					<param name="iterations">0</param>
				</Component>

				<Component name="FindEdges1" type="CvBasic:CvCanny" priority="7" bump="0">
				</Component>
				
				<Component name="FindEdges2" type="CvBasic:CvContour" priority="8" bump="0">
				</Component>
			</Executor>

			<Executor name="Visualization" period="0.8">
				<Component name="Window" type="CvBasic:CvWindow" priority="1" bump="0">
					<param name="count">4</param>
					<param name="title">Original,Result</param>
				</Component>
			</Executor>
		</Subtask>	
	
	</Subtasks>
	
	<DataStreams>
		<Source name="ColorConverter.out_img">
			<sink>HSVClassifier.in_img</sink>		
		</Source>
		
		<Source name="GreyScale.out_img">
			<sink>Threshold.in_img</sink>	
			<!-- <sink>FindEdges1.in_img</sink>	 -->		
		</Source>
		<Source name="Threshold.out_img">
			<sink>Window.in_img2</sink>		
			<sink>FindEdges1.in_img</sink> 
		</Source>
		<Source name="FindEdges1.out_img">
			<sink>FindEdges2.in_img</sink>
			<sink>Window.in_img1</sink>		
		</Source>
		<Source name="FindEdges2.out_img">
			<sink>Window.in_img3</sink>		
		</Source>
		
		<Source name="HSVClassifier.out_img">
			<sink>Morphology1.in_img</sink>		
		</Source>
		<Source name="Morphology1.out_img">
			<sink>Morphology2.in_img</sink>		
		</Source>
		<Source name="Morphology2.out_img">
		</Source>
		<!-- Img processing -->
        <Source name="Source.out_img">
        	<sink>Undistort.in_img</sink>	
        </Source>
        <Source name="CameraInfo.out_camera_info">
        	<sink>Undistort.in_camera_info</sink>
        </Source>

        <Source name="Undistort.out_img">
            <sink>ColorConverter.in_img</sink>	
            <sink>GreyScale.in_img</sink>	
			<sink>Window.in_img0</sink>		
        </Source>
    </DataStreams>
</Task>




